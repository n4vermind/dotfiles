# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

# Clipboard
set selection-clipboard clipboard

# Stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

# yes
set window-title-home-tilde true
set statusbar-home-tilde true

# Zoom settings
set zoom-min 10
set guioptions ""

# colorscheme

set font "Iosevka 9"
set default-bg "#061115" #00
set default-fg "#d9d7d6" #01

set statusbar-fg "#a6a9b7" #04
set statusbar-bg "#111114" #01

set inputbar-bg "#111114" #00 currently not used
set inputbar-fg "#d9d7d6" #02

set notification-error-bg "#f16269" #08
set notification-error-fg "#111114" #00

set notification-warning-bg "#f16269" #08
set notification-warning-fg "#111114" #00

set highlight-color "#e9967e" #0A
set highlight-active-color "#79aaeb" #0D

set completion-highlight-fg "#111114" #02
set completion-highlight-bg "#8cd7aa" #0C

set completion-bg "#16161a" #02
set completion-fg "#a6a9b7" #0C

set notification-bg "#8cd7aa" #0B
set notification-fg "#111114" #00

set recolor "true"
set recolor-lightcolor "#d9d7d6" #00
set recolor-darkcolor "#061115" #06
set recolor-keephue "true"


set render-loading "false"
set adjust-open width
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
